{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 140
    },
    "project_type": {
      "type": "enumeration",
      "enum": [
        "single",
        "ep",
        "album",
        "music_video"
      ],
      "required": true
    },
    "planned_release_date": {
      "type": "date"
    },
    "soft_goal": {
      "type": "biginteger"
    },
    "current_funding": {
      "type": "biginteger",
      "default": "0"
    },
    "deadline": {
      "type": "date"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "audio": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "audios"
      ]
    },
    "hard_goal": {
      "type": "biginteger",
      "required": true
    },
    "contribution_tiers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::contribution-tier.contribution-tier",
      "mappedBy": "project"
    },
    "reactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::reaction.reaction",
      "mappedBy": "project"
    },
    "reaction_count": {
      "type": "integer",
      "required": true,
      "min": 0,
      "default": 0
    },
    "exclusive_contents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::exclusive-content.exclusive-content",
      "mappedBy": "project"
    },
    "summary": {
      "type": "string",
      "minLength": 70,
      "maxLength": 140
    },
    "contributions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::contribution.contribution",
      "mappedBy": "project"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "published",
        "draft",
        "successful",
        "soldOut",
        "failed",
        "failing",
        "withdrawn"
      ],
      "default": "draft"
    }
  }
}
